@model TimeAttendance.UI.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
@if (Request.IsAuthenticated)
{
<h2>Мой профиль</h2>
<hr />
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="container">
    <div class="well well-lg col-sm-offset-3 col-sm-4">
        <div class="form-horizontal">
            @*<h4>Изменение настроек аккаунта</h4>*@
            <div class="form-group">
                <label class="col-sm-3 control-label">Логин:</label>
                <div class="col-sm-3">
                    <div class="form-control-static">@Model.UserName</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">ФИО:</label>
                <div class="col-sm-9">
                    <div class="form-control-static">@Model.LastName @Model.FirstName @Model.MiddleName</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Телефон:</label>
                <div class="col-sm-3">
                    <div class="form-control-static">@Model.PhoneNumber</div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">E-mail:</label>
                <div class="col-sm-3">
                    <div class="form-control-static">@Model.Email</div>
                </div>
            </div>
        </div>
    </div>
</div>
}

@model List<TimeAttendance.UI.Models.AddReport>
<div class="well well-lg col-sm-offset-3 col-sm-5">
    <h3>Выберите параметры</h3>
    <hr />
    @using (Html.BeginForm("Report", "Marks", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "myform" }))
    {
        <div class="form-group">
            <label class="col-md-4 control-label">Пользователи:</label>
            <div class="col-md-6">
                <select name="UserId" class="form-control">
                    <option value="0">Все пользователи</option>
                    @foreach (var b in Model)
                    {
                        <option value="@b.UserId">@b.UserName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Месяц:</label>
            <div class="col-md-6">
                <div class='input-group date' id='datetimepicker' data-provide="datepicker">
                    <input class = "form-control" type = "text" name ="Date"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-6">
                <button type="submit" class="btn btn-primary">Готово</button>
                @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>


@section Scripts {
    @*@Scripts.Render("~/Scripts/jquery-2.1.1.min.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")*@
    @Scripts.Render("~/Scripts/moment-with-locales-1.js")
    @Scripts.Render("~/Scripts/bootstrap-datetimepicker-1.js")
    <script type="text/javascript">
        

        $(function () {
            $('#datetimepicker').datetimepicker({
                format: 'MMMM YYYY',
                viewMode: 'years',
                locale: moment.locale("ru"),
                minDate: moment("01/01/2017"),
                maxDate: 'now',
                
            });
        });
    </script>

}